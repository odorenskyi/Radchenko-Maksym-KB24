    cout << "[DEBUG] Програма почалась\n";

    // === Задача 9.1 ===
    cout << "[DEBUG] Виконання задачі 9.1: Розрахунок населення\n";
    int startPop = 1000000;
    int births = 5000;
    int deaths = 6000;
    int immigrants = 3000;
    int emigrants = 2000;

    cout << "[DEBUG] Вхідні дані:\n";
    cout << "    Початкове населення: " << startPop << "\n";
    cout << "    Народження: " << births << ", Смерті: " << deaths << "\n";
    cout << "    Іммігранти: " << immigrants << ", Емігранти: " << emigrants << "\n";

    int population = calculatePopulationChange(startPop, births, deaths, immigrants, emigrants);
